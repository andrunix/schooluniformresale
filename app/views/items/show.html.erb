
<div class="row">
  <h3><%= @item.name %></h3>

  <div class="well">

    <div class="form-group">
      <label>Description:</label><br/>
      <%= @item.description %>
    </div>

    <div class="form-group">
      <label>Price:</label>
      <%= number_to_currency(@item.price) %>
    </div>

    <div class="form-group">
      <label>Seller:</label>
      <%= link_to @item.user.name, @item.user unless @item.user.nil? %> 
      <%= link_to icon('envelope-o'), messages_path %>
    </div>

    <div class="form-group">
      <label>Category:</label>
      <%= @item.category.name unless @item.category.nil? %>
    </div>

    <div class="form-group">
      <label>Condition:</label>
      <%= @item.condition.description unless @item.condition.nil? %>
    </div>

    <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary' %>
    <%= link_to 'Cancel', items_path, class: 'btn btn-success' %>

  </div>
</div>