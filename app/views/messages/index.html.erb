<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>From user</th>
      <th>To user</th>
      <th>Parent message</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Item</th>
      <th>Unread</th>
      <th>Folder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.from_user_id %></td>
        <td><%= message.to_user_id %></td>
        <td><%= message.parent_message_id %></td>
        <td><%= message.subject %></td>
        <td><%= message.message %></td>
        <td><%= message.item_id %></td>
        <td><%= message.unread %></td>
        <td><%= message.folder_id %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

